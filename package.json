{
  "name": "api-tasks-javascript",
  "version": "1.0.0",
  "description": "API REST de tarefas com Fastify, Prisma e PostgreSQL",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset --force",
    "seed": "node seed/seed.js",
    "studio": "prisma studio",
    "lint": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "node --test tests/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage tests/*.test.js"
  },
  "keywords": [
    "fastify",
    "prisma",
    "postgresql",
    "rest-api",
    "tasks"
  ],
  "author": "ShardCloud",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@prisma/client": "^5.7.0",
    "fastify": "^4.25.0",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "prisma": "^5.7.0"
  }
}

